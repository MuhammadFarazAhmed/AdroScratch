<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <item android:drawable="@drawable/splash_background" />

    <item
        android:gravity="center|clip_horizontal"
        android:top="0dp"
        android:bottom="0dp"
        android:end="0dp"
        android:start="0dp"
        android:width="170dp"
        android:height="80dp"
        android:drawable="@drawable/ic_app_logo"
        tools:targetApi="m" />


    <item
        android:bottom="60dp"
        android:gravity="bottom|fill_horizontal|clip_horizontal">
        <bitmap
            android:gravity="center"
            android:src="@drawable/powered_by" />
    </item>
</layer-list>